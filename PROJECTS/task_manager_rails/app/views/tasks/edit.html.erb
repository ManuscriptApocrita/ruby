<%=image_tag("pokemons.jpg", class: "background") %>

<div class="container" style="border-radius: 10px">
  <h2 class="title-lg mb">Redacting task</h2>

  <%= form_with model: @task do |form|%>
    <p style="margin-top: 10px"><%= form.label :body, "Content"%></p>
    <p><%= form.text_area :body, rows: 8, class: "form-text-area"%></p>

    <p class="mt"><%= form.label :expiration_date%></p>
    <p><%= form.text_field :expiration_date, class: "form-text-field"%></p>

    <p class="mt"><%= form.submit "Save", class: "button button-main"%></p>
  <%end%>
</div>